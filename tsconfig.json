{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@themes": [
        "./styles/themes/*"
      ]
    },
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "jsx": "react"
  },
  "exclude": [
    "rollup.config.js",
    //"src/playground",
    "build",
  ],
  "types": [
    "node"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
